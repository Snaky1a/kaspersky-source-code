TARGETNAME=sius
TARGETPATH=..\..\..\..\out\mklif$(CPUTYPE)\$(DDKBUILDENV)
TARGETTYPE=PROGRAM
UMTYPE=console
USE_MSVCRT=1
USE_LIBCMT=1
LINKER_FLAGS=/NOLOGO

